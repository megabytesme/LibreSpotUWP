<Page
    x:Class="LibreSpotUWP.Views.Win10_1507.PlayerPage_Win10_1507"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:LibreSpotUWP.Converters">

    <Page.Resources>
        <converters:TimeConverter x:Key="TimeConverter" />
    </Page.Resources>

    <Grid Padding="24" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image
            x:Name="AlbumArt"
            Grid.Row="0"
            Width="300"
            Height="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="UniformToFill" />

        <StackPanel
            Grid.Row="1"
            Margin="0,24,0,12"
            HorizontalAlignment="Center">
            <TextBlock
                x:Name="TrackTitle"
                FontSize="24"
                FontWeight="SemiBold"
                MaxLines="1"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />

            <TextBlock
                x:Name="TrackArtist"
                FontSize="16"
                Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                MaxLines="1"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="ElapsedTime"
                Grid.Column="0"
                Margin="0,0,12,0"
                VerticalAlignment="Center"
                FontSize="12" />

            <Slider
                x:Name="PositionSlider"
                Grid.Column="1"
                Maximum="100"
                Minimum="0"
                PointerCaptureLost="PositionSlider_PointerCaptureLost"
                PointerPressed="PositionSlider_PointerPressed"
                ValueChanged="PositionSlider_ValueChanged" />

            <TextBlock
                x:Name="TotalTime"
                Grid.Column="2"
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                FontSize="12" />
        </Grid>

        <StackPanel
            Grid.Row="3"
            Margin="0,24,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="32">

            <Button
                x:Name="PrevButton"
                Width="48"
                Height="48"
                Click="PrevButton_Click">
                <SymbolIcon Symbol="Previous" />
            </Button>

            <Button
                x:Name="PlayPauseButton"
                Width="64"
                Height="64"
                Click="PlayPauseButton_Click">
                <SymbolIcon x:Name="PlayPauseIcon" Symbol="Play" />
            </Button>

            <Button
                x:Name="NextButton"
                Width="48"
                Height="48"
                Click="NextButton_Click">
                <SymbolIcon Symbol="Next" />
            </Button>
        </StackPanel>
    </Grid>
</Page>