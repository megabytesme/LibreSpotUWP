<UserControl
    x:Class="LibreSpotUWP.Controls.PlaylistGridControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:LibreSpotUWP.Controls">

    <ItemsControl x:Name="PlaylistRepeater">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <controls:UniformWrapPanel ItemWidth="160" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Width="160" Tapped="OnPlaylistTapped">
                    <Image
                        Width="160"
                        Height="160"
                        Source="{Binding ImageUrl}"
                        Stretch="UniformToFill" />
                    <TextBlock
                        Margin="0,8,0,0"
                        Text="{Binding Name}"
                        TextTrimming="WordEllipsis"
                        TextWrapping="Wrap" />
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
